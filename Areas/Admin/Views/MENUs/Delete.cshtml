@model Final.Models.MENU

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/MyLayout.cshtml";
}

@section _Header{
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css" />

}

<style>
    dt{
        margin-bottom: 12px;
        font-weight: bold;
    }

    body {
        font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
        font-size: 14px;
        line-height: 1.42857143;
        color: #333;
        background-color: #fff;
    }
</style>

<body>
    <div style="margin: 0px 5px">
        <div class="col-md-12">
            <div class="panel panel-primary">

                <div class="panel-heading" style="text-align: center">
                    Delete Menu
                </div>
                <div class="panel-body">
                    <div class="form-horizontal">

                        <div class="row  mb-3">
                            <div class="control-label col-md-2 font-weight-bold">
                                Tên Menu
                            </div>

                            <div class="col-md-8">
                                <div class="form-control">@Model.NAME</div>
                            </div>
                        </div>

                        <div class="row  mb-3">
                            <div class="control-label col-md-2 font-weight-bold">
                                Link
                            </div>

                            <div class="col-md-8">
                                <div class="form-control">@Model.LINK</div>
                            </div>
                        </div>



                        <div class="row  mb-3">
                            <div class="control-label col-md-2 font-weight-bold">
                                Meta
                            </div>

                            <div class="col-md-8">
                                <div class="form-control">@Model.META</div>
                            </div>
                        </div>


                        <div class="row  mb-3">
                            <div class="control-label col-md-2 font-weight-bold">
                                Hiển thị
                            </div>

                            <div class="col-md-8">

                                @{
                                    bool hide = (Model.HIDE.GetValueOrDefault(true) ? true : false);
                                }

                                @Html.DisplayFor(Model => hide, new { htmlAttributes = new { style = "color: green" } })
                            </div>
                        </div>

                        <div class="row  mb-3">
                            <div class="control-label col-md-2 font-weight-bold">
                                Vị trí
                            </div>

                            <div class="col-md-8">
                                <div class="form-control">@Model.ORDER</div>
                            </div>
                        </div>

                        <div class="row  mb-3">
                            <div class="control-label col-md-2 font-weight-bold">
                                Ngày đăng
                            </div>

                            <div class="col-md-8">
                                <div class="form-control">@Model.NAME</div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div>
                                    @Html.ActionLink("Back", "Index", new { @class = "btn btn-danger" }) |
                                    <input type="submit" value="Delete" class="btn btn-danger" />
                                </div>
                            }
                        </div>


                    </div>



                </div>
            </div>
        </div>
    </div>
    @section _Footer{
        <script src="~/Areas/Admin/Content/assets/vendor/datatables/dataTables.bootstrap4.min.js"></script>

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js">
        </script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js">
        </script>
    }

    </body>
