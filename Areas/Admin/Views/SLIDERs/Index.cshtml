@model IEnumerable<Final.Models.SLIDER>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/MyLayout.cshtml";
}



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    @section _Header{
        <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css" />

    }

    <style>
        body {
            font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
            font-size: 16px;
            line-height: 1.42857143;
            color: #333;
            background-color: #fff;
        }
    </style>
</head>
<body>

    <div class="card shadow mb-4" style="margin: 0px 5px">
        <div class="card-header py-3" style="background-color: #4e73df">

            <div>
                <h3 class="m-0 font-weight-bold text-white" style="text-align: center">Quản lý Silder</h3>

            </div>
        </div>
       
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered display" id="myTable" style="width: 100%" cellspacing="0">
                    <thead>
                        <a class="btn btn-success my-3" href="~/Admin/SLIDERs/Create" style="float: right; ">Thêm mới</a>
                        <tr>
                            <th>
                                @Html.Label("STT")
                            </th>
                            <th>
                                @Html.Label("Tiêu đề")
                            </th>
                            <th>
                                @Html.Label("Hình ảnh")
                            </th>

                            <th>
                                @Html.Label("Meta")

                            </th>
                            <th>
                                @Html.Label("Hiển thị")

                            </th>
                            <th>
                                @Html.Label("Vị trí")

                            </th>
                            <th>
                                @Html.Label("Ngày đăng")

                            </th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ var stt = 1;}
                        @foreach (var item in Model)
                        {
                        <tr style="max-height: 10vh">

                            <td>
                                @Html.Raw(stt++)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TITLE)
                            </td>
                            <td style="width: 250px;">
                                <img style="max-height:100%; max-width:100%" src="~/images/@item.IMG" />
                                
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.META)
                            </td>
                            <td>
                                <p>@Html.Raw(item.HIDE == true ? "Hiển thị" : "Không hiển thị")</p>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ORDER)
                            </td>
                            <td>
                                @string.Format("{0:dd-MM-yyyy}", item.DATE_BEGIN)
                            </td>

                            <td>
                            
                                @Html.ActionLink(" ", "Edit", new { id = item.ID }, new { @class = "fas fa-pencil btn btn-light" })
                                @Html.ActionLink(" ", "Details", new { id = item.ID }, new { @class = "fas fa-eye btn btn-primary" })
                                @Html.ActionLink(" ", "Delete", new { id = item.ID }, new { @class = "fas fa-trash btn btn-danger" })
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>

@section _Footer{
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>

    <script type="text/javascript">
        var js = jQuery.noConflict(true);
        js(document).ready(function () {
            js("#myTable").DataTable({

            });
        })
    </script>
}
